model Review {
    id            String      @id @default(uuid())
    host          Host        @relation(fields: [hostId], references: [id])
    hostId        String
    user          User        @relation(fields: [userId], references: [id])
    userId        String
    rating        Int
    comment       String?
    createdAt     DateTime    @default(now())
    updatedAt     DateTime    @updatedAt

    @@map("reviews")
}
