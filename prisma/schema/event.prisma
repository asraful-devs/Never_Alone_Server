model Event {
  id            String   @id @default(uuid())
  title         String
  description   String
  eventImage    String?
  startDateTime DateTime
  endDateTime   DateTime
  fee           Float
  seats         Int
  location      String

  host   Host   @relation(fields: [hostId], references: [id])
  hostId String

  // Many-to-Many: Event এ অনেক User থাকতে পারে
  userIds String[]
  users   User[]   @relation("EventToUsers")

  bookings Booking[]
  reviews  Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
